<Page
    x:Class="PowerToolbox.Views.Pages.WinFRPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:converter="using:PowerToolbox.Helpers.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:PowerToolbox.Models"
    xmlns:rootservice="using:PowerToolbox.Services.Root"
    xmlns:system="using:System"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <Page.Resources>
        <x:Double x:Key="ProgressBarTrackHeight">8</x:Double>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Margin="30,15,30,0"
            FontSize="22"
            Text="{x:Bind rootservice:ResourceService.WinFRResource.GetString('WinFR')}" />

        <ScrollViewer
            Grid.Row="1"
            Margin="0,5,0,0"
            HorizontalScrollBarVisibility="Disabled"
            HorizontalScrollMode="Disabled"
            VerticalScrollBarVisibility="Auto"
            VerticalScrollMode="Auto">

            <Grid Margin="0,0,0,30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid
                    Grid.Row="0"
                    Height=" 48"
                    Margin="30,3,30,0"
                    Padding="16,0,16,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="4,4,0,0">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <FontIcon
                        Grid.Column="0"
                        Margin="0,0,12,0"
                        FontSize="16"
                        Glyph="&#xEDA2;" />

                    <TextBlock
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Text="{x:Bind rootservice:ResourceService.WinFRResource.GetString('SelectRecoveryDisk')}" />

                    <Button
                        Grid.Column="2"
                        Click="{x:Bind OnRefreshClicked}"
                        Content="{x:Bind rootservice:ResourceService.WinFRResource.GetString('Refresh')}" />
                </Grid>

                <Grid
                    Grid.Row="1"
                    MaxHeight="280"
                    Margin="30,0,30,3"
                    Padding="4,2,0,2"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1,0,1,1"
                    CornerRadius="0,0,4,4"
                    Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityConvert(DriveCollection.Count), Mode=OneWay}">

                    <!--  加载磁盘信息文本提示  -->
                    <Grid
                        Height="150"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        ColumnSpacing="5"
                        Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(IsDriveLoadCompleted), Mode=OneWay}">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <controls:ProgressRing
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            IsActive="{x:Bind converter:ValueConverterHelper.BooleanReverseConvert(IsDriveLoadCompleted), Mode=OneWay}" />

                        <TextBlock
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Text="{x:Bind rootservice:ResourceService.WinFRResource.GetString('LoadingDisk')}" />
                    </Grid>

                    <!--  驱动器信息网格列表  -->
                    <GridView
                        Padding="0,0,4,0"
                        ItemsSource="{x:Bind DriveCollection}"
                        SelectionChanged="{x:Bind OnSelectionChanged}"
                        SelectionMode="Single"
                        Visibility="{x:Bind IsDriveLoadCompleted, Mode=OneWay}">
                        <GridView.ItemTemplate>
                            <DataTemplate x:DataType="model:DriveModel">
                                <Grid
                                    Width="300"
                                    Height="90"
                                    Padding="8"
                                    HorizontalAlignment="Stretch"
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="{StaticResource ControlCornerRadius}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Grid
                                        Grid.Column="0"
                                        Width="72"
                                        CornerRadius="{ThemeResource ControlCornerRadius}">

                                        <Image
                                            Width="48"
                                            VerticalAlignment="Center"
                                            Source="{x:Bind DiskImage}"
                                            Stretch="Uniform" />
                                    </Grid>

                                    <StackPanel
                                        Grid.Column="1"
                                        Margin="16,0,0,0"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical"
                                        Spacing="2">

                                        <TextBlock
                                            x:Name="NameText"
                                            HorizontalAlignment="Left"
                                            Style="{StaticResource BodyStrongTextBlockStyle}"
                                            Text="{x:Bind Name}"
                                            TextLineBounds="TrimToCapHeight"
                                            TextWrapping="NoWrap" />

                                        <controls:ProgressBar
                                            Grid.ColumnSpan="2"
                                            MinHeight="8"
                                            Margin="0,2,4,2"
                                            Background="{ThemeResource SurfaceStrokeColorDefaultBrush}"
                                            CornerRadius="{StaticResource ControlCornerRadius}"
                                            ShowError="{x:Bind IsAvailableSpaceError}"
                                            ShowPaused="{x:Bind IsAvailableSpaceWarning}"
                                            Value="{x:Bind DriveUsedPercentage}" />

                                        <TextBlock
                                            x:Name="SpaceText"
                                            HorizontalAlignment="Left"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            RelativePanel.Below="NameText"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Text="{x:Bind Space}"
                                            TextTrimming="CharacterEllipsis">

                                            <ToolTipService.ToolTip>
                                                <ToolTip
                                                    MaxWidth="9999"
                                                    Content="{x:Bind Space}"
                                                    Visibility="{Binding ElementName=SpaceText, Path=IsTextTrimmed, Mode=OneWay}" />
                                            </ToolTipService.ToolTip>
                                        </TextBlock>
                                    </StackPanel>

                                    <ToolTipService.ToolTip>
                                        <ToolTip MaxWidth="9999">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>

                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <TextBlock
                                                    Grid.Row="0"
                                                    Grid.Column="0"
                                                    Text="{x:Bind rootservice:ResourceService.WinFRResource.GetString('DiskType')}" />

                                                <TextBlock
                                                    Grid.Row="0"
                                                    Grid.Column="1"
                                                    Text="{x:Bind system:Convert.ToString(DriverInfo.DriveFormat)}" />
                                            </Grid>
                                        </ToolTip>
                                    </ToolTipService.ToolTip>

                                    <VisualStateManager.VisualStateGroups>
                                        <VisualStateGroup x:Name="LayoutVisualStates">
                                            <VisualState x:Name="WideLayout">
                                                <VisualState.StateTriggers>
                                                    <AdaptiveTrigger MinWindowWidth="641" />
                                                </VisualState.StateTriggers>
                                                <VisualState.Setters />
                                            </VisualState>
                                            <VisualState x:Name="NarrowLayout">
                                                <VisualState.StateTriggers>
                                                    <AdaptiveTrigger MinWindowWidth="0" />
                                                </VisualState.StateTriggers>
                                                <VisualState.Setters>
                                                    <Setter Target="controlRoot.Width" Value="Auto" />
                                                    <Setter Target="controlRoot.Height" Value="120" />
                                                </VisualState.Setters>
                                            </VisualState>
                                        </VisualStateGroup>
                                    </VisualStateManager.VisualStateGroups>
                                </Grid>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </Grid>

                <!--  驱动器恢复设置  -->
                <controls:Expander
                    Grid.Row="2"
                    Margin="30,0,30,3"
                    Padding="0"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    IsExpanded="True">

                    <controls:Expander.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <FontIcon
                                Grid.Column="0"
                                Margin="0,0,12,0"
                                FontSize="16"
                                Glyph="&#xE777;" />

                            <TextBlock
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Text="{x:Bind rootservice:ResourceService.WinFRResource.GetString('RecoverySettings')}" />

                            <controls:SplitButton
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                Click="{x:Bind OnRecoveryClicked}"
                                Content="{x:Bind rootservice:ResourceService.WinFRResource.GetString('Recovery')}">

                                <controls:SplitButton.Flyout>
                                    <MenuFlyout Placement="Bottom">
                                        <MenuFlyoutItem Click="{x:Bind OnCopyWinFRCommandClicked}" Text="{x:Bind rootservice:ResourceService.WinFRResource.GetString('CopyWinFRCommand')}">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE756;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>

                                        <MenuFlyoutItem Click="{x:Bind OnLearnWinFRClicked}" Text="{x:Bind rootservice:ResourceService.WinFRResource.GetString('LearnWinFR')}">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE777;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                    </MenuFlyout>
                                </controls:SplitButton.Flyout>
                            </controls:SplitButton>
                        </Grid>
                    </controls:Expander.Header>

                    <controls:Expander.Content>
                        <StackPanel Padding="0">
                            <!--  恢复内容  -->
                            <Grid
                                Height="52"
                                Padding="44,0,16,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="{x:Bind rootservice:ResourceService.WinFRResource.GetString('RestoreContent')}" />

                                <TextBox
                                    Grid.Column="1"
                                    MinWidth="240"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Text="{x:Bind RestoreContent, Mode=OneWay}"
                                    TextChanged="{x:Bind OnRestoreContentTextChanged}" />
                            </Grid>

                            <MenuFlyoutSeparator />

                            <!--  保存的文件夹  -->
                            <Grid
                                Height="52"
                                Padding="44,0,16,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <StackPanel
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">

                                    <TextBlock
                                        HorizontalAlignment="Left"
                                        Style="{StaticResource BodyTextBlockStyle}"
                                        Text="{x:Bind rootservice:ResourceService.WinFRResource.GetString('SaveFolder')}" />

                                    <TextBlock
                                        HorizontalAlignment="Left"
                                        TextTrimming="CharacterEllipsis"
                                        TextWrapping="NoWrap"
                                        Visibility="{x:Bind converter:ValueConverterHelper.StringToVisibilityConvert(SaveFolder), Mode=OneWay}">

                                        <Hyperlink Click="{x:Bind OnOpenSaveFolderClicked}" UnderlineStyle="None">
                                            <Run Text="{x:Bind SaveFolder, Mode=OneWay}" />
                                        </Hyperlink>

                                        <ToolTipService.ToolTip>
                                            <ToolTip MaxWidth="9999">
                                                <StackPanel HorizontalAlignment="Stretch">
                                                    <TextBlock Text="{x:Bind rootservice:ResourceService.WinFRResource.GetString('FileStoragePath')}" />
                                                    <TextBlock Text="{x:Bind SaveFolder, Mode=OneWay}" />
                                                    <MenuFlyoutSeparator Margin="4,3" />
                                                    <TextBlock Text="{x:Bind rootservice:ResourceService.WinFRResource.GetString('OpenFolder')}" />
                                                </StackPanel>
                                            </ToolTip>
                                        </ToolTipService.ToolTip>
                                    </TextBlock>
                                </StackPanel>

                                <Button
                                    Grid.Column="1"
                                    Click="{x:Bind OnSelectFolderClicked}"
                                    Content="{x:Bind rootservice:ResourceService.WinFRResource.GetString('SelectFolder')}" />
                            </Grid>

                            <MenuFlyoutSeparator />

                            <!--  恢复模式  -->
                            <Grid
                                Height="52"
                                Padding="44,0,16,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Text="{x:Bind rootservice:ResourceService.WinFRResource.GetString('RecoveryMode')}" />

                                <controls:DropDownButton Grid.Column="1" Content="{x:Bind SelectedRecoveryMode.Value, Mode=OneWay}">

                                    <controls:DropDownButton.Flyout>
                                        <MenuFlyout Placement="Bottom">
                                            <controls:RadioMenuFlyoutItem
                                                Click="{x:Bind OnRecoveryModeClicked}"
                                                GroupName="RecoveryModeRadioGroup"
                                                IsChecked="{x:Bind x:Object.Equals(SelectedRecoveryMode.Key, RecoveryModeList[0].Key), Mode=OneWay}"
                                                Tag="{x:Bind RecoveryModeList[0]}"
                                                Text="{x:Bind system:Convert.ToString(RecoveryModeList[0].Value)}" />

                                            <controls:RadioMenuFlyoutItem
                                                Click="{x:Bind OnRecoveryModeClicked}"
                                                GroupName="RecoveryModeRadioGroup"
                                                IsChecked="{x:Bind x:Object.Equals(SelectedRecoveryMode.Key, RecoveryModeList[1].Key), Mode=OneWay}"
                                                Tag="{x:Bind RecoveryModeList[1]}"
                                                Text="{x:Bind system:Convert.ToString(RecoveryModeList[1].Value)}" />

                                            <MenuFlyoutSeparator />

                                            <controls:RadioMenuFlyoutItem
                                                Click="{x:Bind OnRecoveryModeClicked}"
                                                GroupName="RecoveryModeRadioGroup"
                                                IsChecked="{x:Bind x:Object.Equals(SelectedRecoveryMode.Key, RecoveryModeList[2].Key), Mode=OneWay}"
                                                Tag="{x:Bind RecoveryModeList[2]}"
                                                Text="{x:Bind system:Convert.ToString(RecoveryModeList[2].Value)}" />

                                            <controls:RadioMenuFlyoutItem
                                                Click="{x:Bind OnRecoveryModeClicked}"
                                                GroupName="RecoveryModeRadioGroup"
                                                IsChecked="{x:Bind x:Object.Equals(SelectedRecoveryMode.Key, RecoveryModeList[3].Key), Mode=OneWay}"
                                                Tag="{x:Bind RecoveryModeList[3]}"
                                                Text="{x:Bind system:Convert.ToString(RecoveryModeList[3].Value)}" />

                                            <controls:RadioMenuFlyoutItem
                                                Click="{x:Bind OnRecoveryModeClicked}"
                                                GroupName="RecoveryModeRadioGroup"
                                                IsChecked="{x:Bind x:Object.Equals(SelectedRecoveryMode.Key, RecoveryModeList[4].Key), Mode=OneWay}"
                                                Tag="{x:Bind RecoveryModeList[4]}"
                                                Text="{x:Bind system:Convert.ToString(RecoveryModeList[4].Value)}" />
                                        </MenuFlyout>
                                    </controls:DropDownButton.Flyout>
                                </controls:DropDownButton>
                            </Grid>

                            <MenuFlyoutSeparator />

                            <!--  使用自定义日志文件目录  -->
                            <Grid
                                Height="52"
                                Padding="44,0,16,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="{x:Bind rootservice:ResourceService.WinFRResource.GetString('UseCustomLogFolder')}" />

                                <ToggleSwitch
                                    Grid.Column="1"
                                    MinWidth="0"
                                    Margin="10,-2,-10,0"
                                    IsOn="{x:Bind UseCustomLogFolder, Mode=OneWay}"
                                    OffContent=""
                                    OnContent=""
                                    Toggled="{x:Bind OnUseCustomLogFolderToggled}" />
                            </Grid>

                            <MenuFlyoutSeparator Visibility="{x:Bind UseCustomLogFolder, Mode=OneWay}" />

                            <!--  日志文件保存的文件夹  -->
                            <Grid
                                Height="52"
                                Padding="44,0,16,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Visibility="{x:Bind UseCustomLogFolder, Mode=OneWay}">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <StackPanel
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">

                                    <TextBlock
                                        HorizontalAlignment="Left"
                                        Style="{StaticResource BodyTextBlockStyle}"
                                        Text="{x:Bind rootservice:ResourceService.WinFRResource.GetString('LogFileSaveFolder')}" />

                                    <TextBlock
                                        HorizontalAlignment="Left"
                                        TextTrimming="CharacterEllipsis"
                                        TextWrapping="NoWrap"
                                        Visibility="{x:Bind converter:ValueConverterHelper.StringToVisibilityConvert(LogSaveFolder), Mode=OneWay}">

                                        <Hyperlink Click="{x:Bind OnOpenSaveFolderClicked}" UnderlineStyle="None">
                                            <Run Text="{x:Bind LogSaveFolder, Mode=OneWay}" />
                                        </Hyperlink>

                                        <ToolTipService.ToolTip>
                                            <ToolTip MaxWidth="9999">
                                                <StackPanel HorizontalAlignment="Stretch">
                                                    <TextBlock Text="{x:Bind rootservice:ResourceService.WinFRResource.GetString('FileStoragePath')}" />
                                                    <TextBlock Text="{x:Bind LogSaveFolder, Mode=OneWay}" />
                                                    <MenuFlyoutSeparator Margin="4,3" />
                                                    <TextBlock Text="{x:Bind rootservice:ResourceService.WinFRResource.GetString('OpenFolder')}" />
                                                </StackPanel>
                                            </ToolTip>
                                        </ToolTipService.ToolTip>
                                    </TextBlock>
                                </StackPanel>

                                <Button
                                    Grid.Column="1"
                                    Click="{x:Bind OnSelectFolderClicked}"
                                    Content="{x:Bind rootservice:ResourceService.WinFRResource.GetString('SelectFolder')}" />
                            </Grid>
                        </StackPanel>
                    </controls:Expander.Content>
                </controls:Expander>

                <!--  NTFS 模式恢复选项  -->
                <controls:Expander
                    Grid.Row="3"
                    Margin="30,0,30,3"
                    Padding="0"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    IsExpanded="True"
                    Visibility="{x:Bind GetRecoveryMode(SelectedRecoveryMode.Key, RecoveryModeList[2].Key), Mode=OneWay}">

                    <controls:Expander.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <FontIcon
                                Grid.Column="0"
                                Margin="0,0,12,0"
                                FontSize="16"
                                Glyph="&#xE71D;" />

                            <TextBlock
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Text="{x:Bind rootservice:ResourceService.WinFRResource.GetString('NTFSModeRecoveryOptions')}" />
                        </Grid>
                    </controls:Expander.Header>

                    <controls:Expander.Content>
                        <StackPanel Padding="0">
                            <!--  从回收站中恢复删除的文件  -->
                            <Grid
                                Height="52"
                                Padding="44,0,16,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="{x:Bind rootservice:ResourceService.WinFRResource.GetString('NTFSRestoreFromRecyclebin')}" />

                                <ToggleSwitch
                                    Grid.Column="1"
                                    MinWidth="0"
                                    Margin="10,-2,-10,0"
                                    IsOn="{x:Bind NTFSRestoreFromRecyclebin, Mode=OneWay}"
                                    OffContent=""
                                    OnContent=""
                                    Toggled="{x:Bind OnNTFSRestoreFromRecyclebinToggled}" />
                            </Grid>

                            <MenuFlyoutSeparator />

                            <!--  恢复系统文件  -->
                            <Grid
                                Height="52"
                                Padding="44,0,16,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="{x:Bind rootservice:ResourceService.WinFRResource.GetString('NTFSRestoreSystemFile')}" />

                                <ToggleSwitch
                                    Grid.Column="1"
                                    MinWidth="0"
                                    Margin="10,-2,-10,0"
                                    IsOn="{x:Bind NTFSRestoreSystemFile, Mode=OneWay}"
                                    OffContent=""
                                    OnContent=""
                                    Toggled="{x:Bind OnNTFSRestoreSystemFileToggled}" />
                            </Grid>

                            <MenuFlyoutSeparator />

                            <!--  重复文件选项  -->
                            <Grid
                                Height="52"
                                Padding="44,0,16,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <StackPanel
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">

                                    <TextBlock
                                        HorizontalAlignment="Left"
                                        Style="{StaticResource BodyTextBlockStyle}"
                                        Text="{x:Bind rootservice:ResourceService.WinFRResource.GetString('NTFSDuplicatedFileOption')}" />

                                    <TextBlock
                                        x:Name="NTFSDuplicatedFileOptionDescription"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Text="{x:Bind rootservice:ResourceService.WinFRResource.GetString('NTFSDuplicatedFileOptionDescription')}"
                                        TextTrimming="CharacterEllipsis"
                                        TextWrapping="NoWrap">

                                        <ToolTipService.ToolTip>
                                            <ToolTip
                                                MaxWidth="9999"
                                                Content="{x:Bind rootservice:ResourceService.WinFRResource.GetString('NTFSDuplicatedFileOptionDescription')}"
                                                Visibility="{x:Bind NTFSDuplicatedFileOptionDescription.IsTextTrimmed, Mode=OneWay}" />
                                        </ToolTipService.ToolTip>
                                    </TextBlock>
                                </StackPanel>

                                <controls:DropDownButton Grid.Column="1" Content="{x:Bind SelectedNTFSDuplicatedFileOption.Value, Mode=OneWay}">

                                    <controls:DropDownButton.Flyout>
                                        <MenuFlyout Placement="Bottom">
                                            <controls:RadioMenuFlyoutItem
                                                Click="{x:Bind OnNTFSDuplicatedFileOptionClicked}"
                                                GroupName="NTFSDuplicatedFileOptionRadioGroup"
                                                IsChecked="{x:Bind x:Object.Equals(SelectedNTFSDuplicatedFileOption.Key, NTFSDuplicatedFileOptionList[0].Key), Mode=OneWay}"
                                                Tag="{x:Bind NTFSDuplicatedFileOptionList[0]}"
                                                Text="{x:Bind system:Convert.ToString(NTFSDuplicatedFileOptionList[0].Value)}" />

                                            <controls:RadioMenuFlyoutItem
                                                Click="{x:Bind OnNTFSDuplicatedFileOptionClicked}"
                                                GroupName="NTFSDuplicatedFileOptionRadioGroup"
                                                IsChecked="{x:Bind x:Object.Equals(SelectedNTFSDuplicatedFileOption.Key, NTFSDuplicatedFileOptionList[1].Key), Mode=OneWay}"
                                                Tag="{x:Bind NTFSDuplicatedFileOptionList[1]}"
                                                Text="{x:Bind system:Convert.ToString(NTFSDuplicatedFileOptionList[1].Value)}" />

                                            <controls:RadioMenuFlyoutItem
                                                Click="{x:Bind OnNTFSDuplicatedFileOptionClicked}"
                                                GroupName="NTFSDuplicatedFileOptionRadioGroup"
                                                IsChecked="{x:Bind x:Object.Equals(SelectedNTFSDuplicatedFileOption.Key, NTFSDuplicatedFileOptionList[2].Key), Mode=OneWay}"
                                                Tag="{x:Bind NTFSDuplicatedFileOptionList[2]}"
                                                Text="{x:Bind system:Convert.ToString(NTFSDuplicatedFileOptionList[2].Value)}" />
                                        </MenuFlyout>
                                    </controls:DropDownButton.Flyout>
                                </controls:DropDownButton>
                            </Grid>

                            <MenuFlyoutSeparator />

                            <!--  恢复没有主数据流的文件  -->
                            <Grid
                                Height="52"
                                Padding="44,0,16,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="{x:Bind rootservice:ResourceService.WinFRResource.GetString('NTFSRestoreNonMainDataStream')}" />

                                <ToggleSwitch
                                    Grid.Column="1"
                                    MinWidth="0"
                                    Margin="10,-2,-10,0"
                                    IsOn="{x:Bind NTFSRestoreNonMainDataStream, Mode=OneWay}"
                                    OffContent=""
                                    OnContent=""
                                    Toggled="{x:Bind OnNTFSRestoreNonMainDataStreamToggled}" />
