<Page
    x:Class="PowerTools.Views.Pages.ShellMenuPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:collection="using:System.Collections"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:converter="using:PowerTools.Helpers.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:PowerTools.Models"
    xmlns:rootservice="using:PowerTools.Services.Root"
    xmlns:system="using:System"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <Grid Padding="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="30,15,30,3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <controls:BreadcrumbBar
                Grid.Row="0"
                VerticalAlignment="Center"
                ItemClicked="{x:Bind OnItemClicked}"
                ItemsSource="{x:Bind BreadCollection, Mode=OneWay}">

                <controls:BreadcrumbBar.Resources>
                    <Thickness x:Key="BreadcrumbBarChevronPadding">6,0</Thickness>
                    <x:Double x:Key="BreadcrumbBarChevronFontSize">16</x:Double>
                </controls:BreadcrumbBar.Resources>

                <controls:BreadcrumbBar.ItemTemplate>
                    <DataTemplate x:DataType="collection:DictionaryEntry">
                        <controls:BreadcrumbBarItem Content="{Binding}">
                            <controls:BreadcrumbBarItem.ContentTemplate>
                                <DataTemplate x:DataType="collection:DictionaryEntry">
                                    <TextBlock FontSize="22" Text="{x:Bind Key}" />
                                </DataTemplate>
                            </controls:BreadcrumbBarItem.ContentTemplate>
                        </controls:BreadcrumbBarItem>
                    </DataTemplate>
                </controls:BreadcrumbBar.ItemTemplate>
            </controls:BreadcrumbBar>

            <Button
                Grid.Column="1"
                VerticalAlignment="Center"
                Click="{x:Bind OnMenuSettingsClicked}"
                Content="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('MenuSettings')}"
                Visibility="{x:Bind converter:ValueCheckConverterHelper.IsCurrentControl(BreadCollection.Count, 1), Mode=OneWay}" />

            <Button
                Grid.Column="1"
                VerticalAlignment="Center"
                Click="{x:Bind OnSaveClicked}"
                Content="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('Save')}"
                Visibility="{x:Bind converter:ValueCheckConverterHelper.IsCurrentControl(BreadCollection.Count, 2), Mode=OneWay}" />
        </Grid>

        <!--  主菜单页面  -->
        <ScrollViewer
            Grid.Row="1"
            HorizontalScrollBarVisibility="Disabled"
            HorizontalScrollMode="Disabled"
            VerticalScrollBarVisibility="Auto"
            VerticalScrollMode="Auto"
            Visibility="{x:Bind converter:ValueCheckConverterHelper.IsCurrentControl(BreadCollection.Count, 1), Mode=OneWay}">

            <StackPanel Margin="30,0,30,30">
                <Grid
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource ControlCornerRadius}">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid
                        Grid.Row="0"
                        Height="40"
                        Padding="16,0,0,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="0,0,0,1">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <FontIcon
                            Grid.Column="0"
                            Margin="0,0,12,0"
                            FontSize="16"
                            Glyph="&#xE700;" />

                        <TextBlock
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Text="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('MenuList')}" />
                    </Grid>

                    <Grid Grid.Row="1" Height="450">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0" Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(IsLoading), Mode=OneWay}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="16"
                                Text="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('EmptyShellMenu')}"
                                TextWrapping="Wrap"
                                Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityReverseConvert(ShellMenuItemCollection.Count), Mode=OneWay}" />

                            <controls:TreeView
                                ItemInvoked="{x:Bind OnItemInvoked}"
                                ItemsSource="{x:Bind ShellMenuItemCollection, Mode=OneWay}"
                                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                ScrollViewer.HorizontalScrollMode="Disabled"
                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                ScrollViewer.VerticalScrollMode="Enabled"
                                SelectionMode="Single">

                                <controls:TreeView.ItemTemplate>
                                    <DataTemplate x:DataType="model:ShellMenuItemModel">
                                        <controls:TreeViewItem
                                            IsExpanded="True"
                                            IsSelected="{x:Bind IsSelected, Mode=OneWay}"
                                            ItemsSource="{x:Bind SubMenuItemCollection}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <controls:ImageIcon
                                                    Grid.Column="0"
                                                    Width="20"
                                                    Height="20"
                                                    VerticalAlignment="Center"
                                                    Source="{x:Bind MenuIcon, Mode=OneWay}" />

                                                <TextBlock
                                                    Grid.Column="1"
                                                    Margin="15,0,0,0"
                                                    VerticalAlignment="Center"
                                                    FontSize="14"
                                                    Text="{x:Bind MenuTitleText, Mode=OneWay}"
                                                    TextAlignment="Left"
                                                    TextTrimming="CharacterEllipsis"
                                                    TextWrapping="NoWrap">

                                                    <ToolTipService.ToolTip>
                                                        <ToolTip MaxWidth="9999">
                                                            <TextBlock>
                                                                <Run Text="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('MenuTitleToolTip')}" />
                                                                <Run Text="{x:Bind MenuTitleText, Mode=OneWay}" />
                                                            </TextBlock>
                                                        </ToolTip>
                                                    </ToolTipService.ToolTip>
                                                </TextBlock>
                                            </Grid>
                                        </controls:TreeViewItem>
                                    </DataTemplate>
                                </controls:TreeView.ItemTemplate>
                            </controls:TreeView>
                        </Grid>

                        <Grid
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            RowSpacing="5"
                            Visibility="{x:Bind IsLoading, Mode=OneWay}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <controls:ProgressRing
                                Grid.Row="0"
                                Width="50"
                                Height="50" />

                            <TextBlock
                                Grid.Row="1"
                                FontSize="16"
                                Text="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('LoadingNow')}"
                                TextWrapping="Wrap" />
                        </Grid>

                        <ContentControl Grid.Column="1" IsEnabled="{x:Bind converter:ValueConverterHelper.BooleanReverseConvert(IsLoading), Mode=OneWay}">

                            <StackPanel
                                Width="200"
                                Padding="5"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1,0,0,0"
                                Spacing="5">

                                <Button
                                    HorizontalAlignment="Stretch"
                                    Click="{x:Bind OnAddMenuItemClicked}"
                                    Content="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('AddMenuItem')}"
                                    IsEnabled="{x:Bind IsAddMenuEnabled, Mode=OneWay}" />

                                <Button
                                    HorizontalAlignment="Stretch"
                                    Click="{x:Bind OnRemoveMenuItemClicked}"
                                    Content="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('RemoveMenuItem')}"
                                    IsEnabled="{x:Bind IsRemoveMenuEnabled, Mode=OneWay}" />

                                <Button
                                    HorizontalAlignment="Stretch"
                                    Click="{x:Bind OnClearMenuClicked}"
                                    Content="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('ClearMenu')}"
                                    IsEnabled="{x:Bind system:Convert.ToBoolean(ShellMenuItemCollection.Count), Mode=OneWay}"
                                    ToolTipService.ToolTip="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('ClearMenuToolTip')}" />

                                <Button
                                    HorizontalAlignment="Stretch"
                                    Click="{x:Bind OnRefreshClicked}"
                                    Content="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('Refresh')}" />

                                <Button
                                    HorizontalAlignment="Stretch"
                                    Click="{x:Bind OnEditMenuClicked}"
                                    Content="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('EditMenu')}"
                                    IsEnabled="{x:Bind IsEditMenuEnabled, Mode=OneWay}"
                                    ToolTipService.ToolTip="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('EditMenuTip')}" />

                                <MenuFlyoutSeparator />

                                <Button
                                    HorizontalAlignment="Stretch"
                                    Click="{x:Bind OnMoveUpClicked}"
                                    Content="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('MoveUp')}"
                                    IsEnabled="{x:Bind IsMoveUpEnabled, Mode=OneWay}" />

                                <Button
                                    HorizontalAlignment="Stretch"
                                    Click="{x:Bind OnMoveDownClicked}"
                                    Content="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('MoveDown')}"
                                    IsEnabled="{x:Bind IsMoveDownEnabled, Mode=OneWay}" />
                            </StackPanel>
                        </ContentControl>
                    </Grid>
                </Grid>

                <controls:Expander
                    Margin="0,3,0,3"
                    Padding="0"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    IsExpanded="True">

                    <controls:Expander.Header>
                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <FontIcon
                                Grid.Column="0"
                                Margin="0,0,12,0"
                                FontSize="16"
                                Glyph="&#xE7BA;" />

                            <TextBlock
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Text="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('Precautions')}" />
                        </Grid>
                    </controls:Expander.Header>

                    <controls:Expander.Content>
                        <StackPanel Margin="0">

                            <TextBlock
                                Margin="44,10,16,5"
                                FontSize="14"
                                FontWeight="Normal"
                                Text="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('PrecautionsContent1')}"
                                TextAlignment="Justify"
                                TextWrapping="Wrap" />

                            <TextBlock
                                Margin="44,0,16,5"
                                FontSize="14"
                                FontWeight="Normal"
                                Text="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('PrecautionsContent2')}"
                                TextAlignment="Justify"
                                TextWrapping="Wrap" />

                            <TextBlock
                                Margin="44,0,16,5"
                                FontSize="14"
                                FontWeight="Normal"
                                Text="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('PrecautionsContent3')}"
                                TextAlignment="Justify"
                                TextWrapping="Wrap" />

                            <TextBlock
                                Margin="44,0,16,10"
                                FontSize="14"
                                FontWeight="Normal"
                                Text="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('PrecautionsContent4')}"
                                TextAlignment="Justify"
                                TextWrapping="Wrap" />
                        </StackPanel>
                    </controls:Expander.Content>
                </controls:Expander>
            </StackPanel>
        </ScrollViewer>

        <!--  菜单编辑页面  -->
        <ScrollViewer
            Grid.Row="1"
            HorizontalScrollBarVisibility="Disabled"
            HorizontalScrollMode="Disabled"
            VerticalScrollBarVisibility="Auto"
            VerticalScrollMode="Auto"
            Visibility="{x:Bind converter:ValueCheckConverterHelper.IsCurrentControl(BreadCollection.Count, 2), Mode=OneWay}">

            <StackPanel Margin="30,0,30,30">

                <!--  菜单标题设置  -->
                <Grid
                    Height="61"
                    Margin="0,0,0,3"
                    Padding="16,12"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource ControlCornerRadius}">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="180" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <FontIcon
                        Grid.Column="0"
                        Margin="0,0,12,0"
                        FontSize="16"
                        Glyph="&#xE71D;" />

                    <TextBlock
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Style="{StaticResource BodyTextBlockStyle}"
                        Text="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('MenuTitle')}" />

                    <TextBox
                        x:Name="MenuTitleTextBox"
                        Grid.Column="2"
                        Width="350"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        PlaceholderText="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('MenuTitlePHText')}"
                        Text="{x:Bind MenuTitleText, Mode=OneWay}"
                        TextChanged="{x:Bind OnTitleTextChanged}" />
                </Grid>

                <!--  菜单图标设置  -->
                <controls:Expander
                    Margin="0,0,0,3"
                    Padding="0"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    IsExpanded="True">

                    <controls:Expander.Header>
                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <FontIcon
                                Grid.Column="0"
                                Margin="0,0,12,0"
                                FontSize="16"
                                Glyph="&#xE8B9;" />

                            <TextBlock
                                Grid.Column="1"
                                Margin="0,12"
                                VerticalAlignment="Center"
                                Style="{StaticResource BodyTextBlockStyle}"
                                Text="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('MenuIcon')}" />
                        </Grid>
                    </controls:Expander.Header>

                    <controls:Expander.Content>
                        <StackPanel Padding="0" HorizontalAlignment="Stretch">
                            <!--  是否使用图标  -->
                            <Grid
                                Height="52"
                                Padding="44,0,16,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('ShouldUseIcon')}" />

                                <StackPanel
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">

                                    <TextBlock
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Text="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('ShouldUseIconOffContent')}"
                                        Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(ShouldUseIcon), Mode=OneWay}" />

                                    <TextBlock
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Text="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('ShouldUseIconOnContent')}"
                                        Visibility="{x:Bind ShouldUseIcon, Mode=OneWay}" />

                                    <ToggleSwitch
                                        MinWidth="0"
                                        Margin="10,-2,-10,0"
                                        IsOn="{x:Bind ShouldUseIcon, Mode=OneWay}"
                                        OffContent=""
                                        OnContent=""
                                        Toggled="{x:Bind OnShouldUseIconToggled}" />
                                </StackPanel>
                            </Grid>

                            <StackPanel Visibility="{x:Bind ShouldUseIcon, Mode=OneWay}">

                                <MenuFlyoutSeparator />

                                <!--  是否使用应用程序图标  -->
                                <Grid
                                    Height="52"
                                    Padding="44,0,16,0"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource BodyTextBlockStyle}"
                                        Text="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('ShouldUseProgramIcon')}" />

                                    <StackPanel
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">

                                        <TextBlock
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Text="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('ShouldUseProgramIconOffContent')}"
                                            Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(ShouldUseProgramIcon), Mode=OneWay}" />

                                        <TextBlock
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Text="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('ShouldUseProgramIconOnContent')}"
                                            Visibility="{x:Bind ShouldUseProgramIcon, Mode=OneWay}" />

                                        <ToggleSwitch
                                            MinWidth="0"
                                            Margin="10,-2,-10,0"
                                            IsOn="{x:Bind ShouldUseProgramIcon, Mode=OneWay}"
                                            OffContent=""
                                            OnContent=""
                                            Toggled="{x:Bind OnShouldUseProgramIconToggled}" />
                                    </StackPanel>
                                </Grid>

                                <StackPanel Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(ShouldUseProgramIcon), Mode=OneWay}">

                                    <MenuFlyoutSeparator />

                                    <!--  是否启用主题图标  -->
                                    <Grid
                                        Height="52"
                                        Padding="44,0,16,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center">

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Grid.Column="0"
                                            VerticalAlignment="Center"
                                            Style="{StaticResource BodyTextBlockStyle}"
                                            Text="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('ShouldUseThemeIcon')}" />

                                        <StackPanel
                                            Grid.Column="1"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">

                                            <TextBlock
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                Text="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('ShouldUseThemeIconOffContent')}"
                                                Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(ShouldUseProgramIcon), Mode=OneWay}" />

                                            <TextBlock
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                Text="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('ShouldUseThemeIconOnContent')}"
                                                Visibility="{x:Bind ShouldUseThemeIcon, Mode=OneWay}" />

                                            <ToggleSwitch
                                                MinWidth="0"
                                                Margin="10,-2,-10,0"
                                                IsOn="{x:Bind ShouldUseThemeIcon, Mode=OneWay}"
                                                OffContent=""
                                                OnContent=""
                                                Toggled="{x:Bind OnShouldUseThemeIconToggled}" />
                                        </StackPanel>
                                    </Grid>

                                    <MenuFlyoutSeparator />

                                    <!--  默认图标  -->
                                    <Grid
                                        Height="52"
                                        Padding="44,0,16,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center"
                                        ColumnSpacing="10"
                                        Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(ShouldUseThemeIcon), Mode=OneWay}">

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="180" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Grid.Column="0"
                                            VerticalAlignment="Center"
                                            Style="{StaticResource BodyTextBlockStyle}"
                                            Text="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('DefaultIcon')}" />

                                        <StackPanel
                                            Grid.Column="1"
                                            HorizontalAlignment="Right"
                                            Orientation="Horizontal">

                                            <controls:ImageIcon
                                                Width="28"
                                                Height="28"
                                                VerticalAlignment="Center"
                                                Source="{x:Bind DefaultIconImage, Mode=OneWay}" />

                                            <TextBox
                                                Width="300"
                                                Margin="10,0,0,0"
                                                VerticalAlignment="Center"
                                                IsReadOnly="True"
                                                PlaceholderText="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('UnknownDefaultIconPath')}"
                                                Text="{x:Bind DefaultIconPath, Mode=OneWay}" />
                                        </StackPanel>

                                        <Button
                                            x:Name="MenuDefaultIconBrowserButton"
                                            Grid.Column="2"
                                            VerticalAlignment="Center"
                                            Click="{x:Bind OnDefaultIconBrowserClicked}"
                                            Content="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('Browser')}" />
                                    </Grid>

                                    <StackPanel Visibility="{x:Bind ShouldUseThemeIcon, Mode=OneWay}">

                                        <!--  浅色主题图标  -->
                                        <Grid
                                            Height="52"
                                            Padding="44,0,16,0"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Center"
                                            ColumnSpacing="10"
                                            Visibility="{x:Bind ShouldUseThemeIcon, Mode=OneWay}">

                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="180" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock
                                                Grid.Column="0"
                                                VerticalAlignment="Center"
                                                Style="{StaticResource BodyTextBlockStyle}"
                                                Text="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('LightThemeIcon')}" />

                                            <StackPanel
                                                Grid.Column="1"
                                                HorizontalAlignment="Right"
                                                Orientation="Horizontal">

                                                <controls:ImageIcon
                                                    Width="28"
                                                    Height="28"
                                                    VerticalAlignment="Center"
                                                    Source="{x:Bind LightThemeIconImage, Mode=OneWay}" />

                                                <TextBox
                                                    Width="300"
                                                    Margin="10,0,0,0"
                                                    VerticalAlignment="Center"
                                                    IsReadOnly="True"
                                                    PlaceholderText="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('UnknownLightThemeIconPath')}"
                                                    Text="{x:Bind LightThemeIconPath, Mode=OneWay}" />
                                            </StackPanel>

                                            <Button
                                                x:Name="MenuLigthThemeIconBrowserButton"
                                                Grid.Column="2"
                                                VerticalAlignment="Center"
                                                Click="{x:Bind OnLightThemeIconBrowserClicked}"
                                                Content="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('Browser')}" />
                                        </Grid>

                                        <MenuFlyoutSeparator Visibility="{x:Bind ShouldUseThemeIcon, Mode=OneWay}" />

                                        <!--  深色主题图标  -->
                                        <Grid
                                            Height="52"
                                            Padding="44,0,16,0"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Center"
                                            ColumnSpacing="10"
                                            Visibility="{x:Bind ShouldUseThemeIcon, Mode=OneWay}">

                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="180" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock
                                                Grid.Column="0"
                                                VerticalAlignment="Center"
                                                Style="{StaticResource BodyTextBlockStyle}"
                                                Text="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('DarkThemeIcon')}" />

                                            <StackPanel
                                                Grid.Column="1"
                                                HorizontalAlignment="Right"
                                                Orientation="Horizontal">

                                                <controls:ImageIcon
                                                    Width="28"
                                                    Height="28"
                                                    VerticalAlignment="Center"
                                                    Source="{x:Bind DarkThemeIconImage, Mode=OneWay}" />

                                                <TextBox
                                                    Width="300"
                                                    Margin="10,0,0,0"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Center"
                                                    IsReadOnly="True"
                                                    PlaceholderText="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('UnknownDarkThemeIconPath')}"
                                                    Text="{x:Bind DarkThemeIconPath, Mode=OneWay}" />
                                            </StackPanel>

                                            <Button
                                                x:Name="MenuDarkThemeIconBrowserButton"
                                                Grid.Column="2"
                                                VerticalAlignment="Center"
                                                Click="{x:Bind OnDarkThemeIconBrowserClicked}"
                                                Content="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('Browser')}" />
                                        </Grid>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </controls:Expander.Content>
                </controls:Expander>

                <!--  程序路径  -->
                <Grid
                    Height="61"
                    Margin="0,0,0,3"
                    Padding="16,12"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource ControlCornerRadius}">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="180" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <FontIcon
                        Grid.Column="0"
                        Margin="0,0,12,0"
                        FontSize="16"
                        Glyph="&#xE8A1;" />

                    <TextBlock
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Style="{StaticResource BodyTextBlockStyle}"
                        Text="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('MenuProgramPath')}" />

                    <TextBox
                        Grid.Column="2"
                        Width="300"
                        Margin="0,0,10,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        IsReadOnly="True"
                        PlaceholderText="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('MenuProgramPathPHText')}"
                        Text="{x:Bind MenuProgramPathText, Mode=OneWay}" />

                    <Button
                        x:Name="MenuProgramBrowserButton"
                        Grid.Column="3"
                        VerticalAlignment="Center"
                        Click="{x:Bind OnMenuProgramPathBrowserClicked}"
                        Content="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('Browser')}" />
                </Grid>

                <!--  菜单参数  -->
                <Grid
                    Height="61"
                    Margin="0,0,0,3"
                    Padding="16,12"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource ControlCornerRadius}">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="180" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <FontIcon
                        Grid.Column="0"
                        Margin="0,0,12,0"
                        FontSize="16"
                        Glyph="&#xE765;" />

                    <TextBlock
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Style="{StaticResource BodyTextBlockStyle}"
                        Text="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('MenuParameter')}" />

                    <TextBox
                        Grid.Column="2"
                        Width="350"
                        Margin="10,0,0,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        PlaceholderText="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('MenuParameterPHText')}"
                        Text="{x:Bind MenuParameterText, Mode=OneWay}"
                        TextChanged="{x:Bind OnMenuParameterTextChanged}" />
                </Grid>

                <!--  提权运行  -->
                <Grid
                    Height="61"
                    Margin="0,0,0,3"
                    Padding="16,12"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource ControlCornerRadius}">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <FontIcon
                        Grid.Column="0"
                        Margin="0,0,12,0"
                        FontSize="16"
                        Glyph="&#xE7EF;" />

                    <TextBlock
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Style="{StaticResource BodyTextBlockStyle}"
                        Text="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('RunAsAdministrator')}" />

                    <StackPanel
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">

                        <TextBlock
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Text="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('IsAlwaysRunAsAdministratorOffContent')}"
                            Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(IsAlwaysRunAsAdministrator), Mode=OneWay}" />

                        <TextBlock
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Text="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('IsAlwaysRunAsAdministratorOnContent')}"
                            Visibility="{x:Bind IsAlwaysRunAsAdministrator, Mode=OneWay}" />

                        <ToggleSwitch
                            MinWidth="0"
                            Margin="10,-2,-10,0"
                            IsOn="{x:Bind IsAlwaysRunAsAdministrator, Mode=OneWay}"
                            OffContent=""
                            OnContent=""
                            Toggled="{x:Bind OnIsAlwaysRunAsAdministratorToggled}" />
                    </StackPanel>
                </Grid>

                <!--  文件夹匹配类型  -->
                <Grid
                    Height="61"
                    Margin="0,0,0,3"
                    Padding="16,12"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource ControlCornerRadius}">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="180" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <FontIcon
                        Grid.Column="0"
                        Margin="0,0,12,0"
                        FontSize="16"
                        Glyph="&#xE8B7;" />

                    <TextBlock
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Style="{StaticResource BodyTextBlockStyle}"
                        Text="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('MenuFolderMatch')}" />

                    <StackPanel
                        Grid.Column="2"
                        Margin="0,0,5,0"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal"
                        Spacing="10">

                        <CheckBox
                            MinWidth="0"
                            Content="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('Background')}"
                            IsChecked="{x:Bind FolderBackgroundMatch, Mode=TwoWay}" />

                        <CheckBox
                            MinWidth="0"
                            Content="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('Desktop')}"
                            IsChecked="{x:Bind FolderDesktopMatch, Mode=TwoWay}" />

                        <CheckBox
                            MinWidth="0"
                            Content="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('Directory')}"
                            IsChecked="{x:Bind FolderDirectoryMatch, Mode=TwoWay}" />

                        <CheckBox
                            MinWidth="0"
                            Content="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('Drive')}"
                            IsChecked="{x:Bind FolderDriveMatch, Mode=TwoWay}" />
                    </StackPanel>
                </Grid>

                <!--  文件匹配类型  -->
                <controls:Expander
                    Margin="0,0,0,3"
                    Padding="0"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    IsExpanded="True">

                    <controls:Expander.Header>
                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <FontIcon
                                Grid.Column="0"
                                Margin="0,0,12,0"
                                FontSize="16"
                                Glyph="&#xE8A5;" />

                            <TextBlock
                                Grid.Column="1"
                                Margin="0,12"
                                VerticalAlignment="Center"
                                Style="{StaticResource BodyTextBlockStyle}"
                                Text="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('MenuFileMatch')}" />
                        </Grid>
                    </controls:Expander.Header>

                    <controls:Expander.Content>
                        <StackPanel Padding="0" HorizontalAlignment="Stretch">
                            <!--  文件匹配规则选择  -->
                            <Grid
                                Height="52"
                                Padding="44,0,16,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('MenuFileMatchRule')}" />

                                <controls:DropDownButton Grid.Column="1" Content="{x:Bind SelectedFileMatchRule.Value, Mode=OneWay}">
                                    <controls:DropDownButton.Flyout>
                                        <MenuFlyout Placement="Bottom">
                                            <controls:RadioMenuFlyoutItem
                                                Height="32"
                                                Padding="11,0"
                                                Click="{x:Bind OnFileMatchRuleClicked}"
                                                GroupName="FileMatchRuleRadioGroup"
                                                IsChecked="{x:Bind SelectedFileMatchRule.Key.Equals(FileMatchRuleList[0].Key), Mode=OneWay}"
                                                Tag="0"
                                                Text="{x:Bind system:Convert.ToString(FileMatchRuleList[0].Value)}" />

                                            <controls:RadioMenuFlyoutItem
                                                Height="32"
                                                Padding="11,0"
                                                Click="{x:Bind OnFileMatchRuleClicked}"
                                                GroupName="FileMatchRuleRadioGroup"
                                                IsChecked="{x:Bind SelectedFileMatchRule.Key.Equals(FileMatchRuleList[1].Key), Mode=OneWay}"
                                                Tag="1"
                                                Text="{x:Bind system:Convert.ToString(FileMatchRuleList[1].Value)}" />

                                            <controls:RadioMenuFlyoutItem
                                                Height="32"
                                                Padding="11,0"
                                                Click="{x:Bind OnFileMatchRuleClicked}"
                                                GroupName="FileMatchRuleRadioGroup"
                                                IsChecked="{x:Bind SelectedFileMatchRule.Key.Equals(FileMatchRuleList[2].Key), Mode=OneWay}"
                                                Tag="2"
                                                Text="{x:Bind system:Convert.ToString(FileMatchRuleList[2].Value)}" />

                                            <controls:RadioMenuFlyoutItem
                                                Height="32"
                                                Padding="11,0"
                                                Click="{x:Bind OnFileMatchRuleClicked}"
                                                GroupName="FileMatchRuleRadioGroup"
                                                IsChecked="{x:Bind SelectedFileMatchRule.Key.Equals(FileMatchRuleList[3].Key), Mode=OneWay}"
                                                Tag="3"
                                                Text="{x:Bind system:Convert.ToString(FileMatchRuleList[3].Value)}" />

                                            <controls:RadioMenuFlyoutItem
                                                Height="32"
                                                Padding="11,0"
                                                Click="{x:Bind OnFileMatchRuleClicked}"
                                                GroupName="FileMatchRuleRadioGroup"
                                                IsChecked="{x:Bind SelectedFileMatchRule.Key.Equals(FileMatchRuleList[4].Key), Mode=OneWay}"
                                                Tag="4"
                                                Text="{x:Bind system:Convert.ToString(FileMatchRuleList[4].Value)}" />
                                        </MenuFlyout>
                                    </controls:DropDownButton.Flyout>
                                </controls:DropDownButton>
                            </Grid>

                            <StackPanel Visibility="{x:Bind NeedInputMatchFormat, Mode=OneWay}">

                                <!--  文件匹配格式  -->
                                <MenuFlyoutSeparator />

                                <Grid
                                    Height="52"
                                    Padding="44,0,16,0"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource BodyTextBlockStyle}"
                                        Text="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('MenuFileMatchFormat')}" />

                                    <TextBox
                                        x:Name="MenuFileMatchFormatTextBox"
                                        Grid.Column="1"
                                        Width="350"
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        PlaceholderText="{x:Bind MenuFileMatchFormatPHText, Mode=OneWay}"
                                        Text="{x:Bind MenuFileMatchFormatText, Mode=OneWay}"
                                        TextChanged="{x:Bind OnMenuFileMatchFormatTextChanged}" />
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </controls:Expander.Content>
                </controls:Expander>

                <!--  菜单设置说明  -->
                <controls:Expander
                    Margin="0,0,0,3"
                    Padding="0"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    IsExpanded="True">

                    <controls:Expander.Header>
                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <FontIcon
                                Grid.Column="0"
                                Margin="0,0,12,0"
                                FontSize="16"
                                Glyph="&#xE82F;" />

                            <TextBlock
                                Grid.Column="1"
                                Margin="0,12"
                                VerticalAlignment="Center"
                                Style="{StaticResource BodyTextBlockStyle}"
                                Text="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('EditMenuTip')}" />
                        </Grid>
                    </controls:Expander.Header>

                    <controls:Expander.Content>
                        <StackPanel Margin="0">
                            <TextBlock
                                Margin="44,10,16,5"
                                FontSize="14"
                                FontWeight="Normal"
                                Text="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('TipContent1')}"
                                TextAlignment="Justify"
                                TextWrapping="Wrap" />
                            <TextBlock
                                Margin="44,0,16,5"
                                FontSize="14"
                                FontWeight="Normal"
                                Text="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('TipContent2')}"
                                TextAlignment="Justify"
                                TextWrapping="Wrap" />
                            <TextBlock
                                Margin="44,0,16,5"
                                FontSize="14"
                                FontWeight="Normal"
                                Text="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('TipContent3')}"
                                TextAlignment="Justify"
                                TextWrapping="Wrap" />
                            <TextBlock
                                Margin="44,0,16,10"
                                FontSize="14"
                                FontWeight="Normal"
                                Text="{x:Bind rootservice:ResourceService.ShellMenuResource.GetString('TipContent4')}"
                                TextAlignment="Justify"
                                TextWrapping="Wrap" />
                        </StackPanel>
                    </controls:Expander.Content>
                </controls:Expander>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
